<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeMangmetnt">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="اذا كنت تريد ادارة وتنظيم أوقات مواعيد طفلك وأوقات النوم واللعب تفضل هنا :" />

    <Button
        android:id="@+id/button"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="132dp"
        android:onClick="AddDectorr"
        android:text="وقت المعالجه" />

    <Button
        android:id="@+id/button2"
        android:layout_width="198dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/button"
        android:layout_centerVertical="true"
        android:text="وقت النوم" />

    <Button
        android:id="@+id/button3"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="103dp"
        android:text="وقت اللعب" />
</RelativeLayout>